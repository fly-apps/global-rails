<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">


  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">

<div class="bg-white shadow overflow-hidden sm:rounded-lg" data-controller="timings">
  <%
    regions = %w{ ord ams scl syd nrt }
    regions.push("local") if Rails.env == "development"
  %>
  <div>
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8 px-4" aria-label="Tabs">
        <div class="font-medium px-2 py-2">Region:</div>
        <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" -->
        <% regions.each do |r| %>
        <%
          style = "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
          style = "border-indigo-500 text-indigo-600" if r == FlyGlobal.current_region
        %>
        <a href="/regions/<%= r %>" class="<%= style %> px-1 py-2" data-turbolinks="false">
          <%= r %>
        </a>
        <% end %>
      </nav>
    </div>
  </div>

  <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
    <dl class="sm:divide-y sm:divide-gray-200">
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Connection&nbsp;Region
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= request.headers['Fly-Region'] || '?' %>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Rails Region
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= ENV['FLY_REGION'] || '?' %>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Response Time
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2" data-timings-target="responseEnd">
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Replay Time
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= replay_overhead %>ms
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          TLS Time
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2" data-timings-target="secureConnectionStart">
        </dd>
      </div>
    </dl>
  </div>
</div>

  </div>
</div>